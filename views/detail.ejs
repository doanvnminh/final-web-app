<div class="product-detail">
    <h1>
        <%= house.title %>
    </h1>
    <p>Giá: <%= house.price %>
    </p>
    <p>
        <%= house.desc %>
    </p>

    <div class="comment-section">
        <h3>Bình luận</h3>
        <form action="/house/<%= house.id %>/comment" method="POST">
            <input type="text" name="name" placeholder="Tên của bạn" required><br>
            <input type="email" name="email" placeholder="Email" required><br>
            <textarea name="content" placeholder="Nội dung..."></textarea><br>
            <label>Điểm đánh giá:</label>
            <select name="rating">
                <option value="5">5 sao</option>
                <option value="4">4 sao</option>
            </select><br>
            <button type="submit">Gửi bình luận</button>
        </form>

        <div class="comments-list">
            <% comments.forEach(c=> { %>
                <div class="comment-item">
                    <strong>
                        <%= c.name %>
                    </strong> (Đánh giá: <%= c.rating %>/5)
                        <p>
                            <%= c.content %>
                        </p>
                </div>
                <% }) %>
        </div>
    </div>
</div>

<div id="ad-popup">
    <h3>Quảng cáo nhà đẹp!</h3>
    <p>Liên hệ ngay để có giá tốt.</p>
    <button id="close-popup">Đóng</button>
</div>

<script src="/js/script.js"></script>